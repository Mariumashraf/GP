<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".DRINKS">
    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="368dp"
            android:layout_height="203dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorAccent"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:background="@color/colorPrimary" />

            <ImageButton
                android:id="@+id/playall"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="132dp"
                android:layout_height="30dp"
                android:layout_marginStart="-200dp"
                android:layout_marginLeft="-250dp"
                android:layout_marginTop="170dp"
                android:background="@drawable/round_button"
                android:contentDescription="TODO"
                android:src="@android:drawable/ic_media_play" />
        </LinearLayout>

    <ImageView
        android:id="@+id/juice"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:layout_marginStart="111dp"
        android:layout_marginLeft="111dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/juiceeez"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:contentDescription="@string/juice" />

    <ImageView
        android:id="@+id/water"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/waterrrz"
        app:layout_constraintStart_toEndOf="@+id/juice"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:contentDescription="@string/water" />

    <ImageView
        android:id="@+id/milk"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/milkkkz"
        app:layout_constraintStart_toEndOf="@+id/water"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:contentDescription="@string/milk" />

    <TextView
        android:id="@+id/juice2"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginStart="111dp"
        android:layout_marginLeft="111dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="@string/juice2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/juice" />

    <TextView
        android:id="@+id/water2"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="@string/water2"
        app:layout_constraintStart_toEndOf="@+id/juice2"
        app:layout_constraintTop_toBottomOf="@+id/juice" />

    <TextView
        android:id="@+id/milk2"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="@string/milk2"
        app:layout_constraintStart_toEndOf="@+id/water2"
        app:layout_constraintTop_toBottomOf="@+id/milk" />

    <Button
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="44dp"
        android:background="@android:drawable/ic_menu_revert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>