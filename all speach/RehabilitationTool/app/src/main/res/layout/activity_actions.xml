<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ACTIONS">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="368dp"
                android:layout_height="203dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/colorAccent"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="158dp"
                    android:background="@color/colorPrimary" />

                <ImageButton
                    android:id="@+id/playall"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="132dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="-200dp"
                    android:layout_marginLeft="-250dp"
                    android:layout_marginTop="170dp"
                    android:background="@drawable/round_button"
                    android:contentDescription="TODO"
                    android:src="@android:drawable/ic_media_play" />
            </LinearLayout>

            <ImageView
                android:id="@+id/smile"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/smileeez"
                app:layout_constraintStart_toEndOf="@+id/climb"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:contentDescription="@string/smile" />

            <ImageView
                android:id="@+id/climb"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/climbbbzz"
                app:layout_constraintStart_toEndOf="@+id/speak"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:contentDescription="@string/climb" />

            <ImageView
                android:id="@+id/speak"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/speakkkz"
                app:layout_constraintStart_toEndOf="@+id/run"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:contentDescription="@string/speak" />

            <ImageView
                android:id="@+id/run"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/runnnz"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:contentDescription="@string/run" />

            <TextView
                android:id="@+id/smile2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/smile2"
                app:layout_constraintStart_toEndOf="@+id/climb2"
                app:layout_constraintTop_toBottomOf="@+id/smile" />

            <TextView
                android:id="@+id/climb2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/climb2"
                app:layout_constraintStart_toEndOf="@+id/speak2"
                app:layout_constraintTop_toBottomOf="@+id/climb" />

            <TextView
                android:id="@+id/speak2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/speak2"
                app:layout_constraintStart_toEndOf="@+id/run2"
                app:layout_constraintTop_toBottomOf="@+id/speak" />

            <TextView
                android:id="@+id/run2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/run2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/run" />

            <ImageView
                android:id="@+id/dance"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/danceeezz"
                app:layout_constraintStart_toEndOf="@+id/ride"
                app:layout_constraintTop_toBottomOf="@+id/smile2"
                android:contentDescription="@string/dance" />

            <ImageView
                android:id="@+id/ride"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rideeeeez"
                app:layout_constraintStart_toEndOf="@+id/throw3"
                app:layout_constraintTop_toBottomOf="@+id/climb2"
                android:contentDescription="@string/ride" />


            <ImageView
                android:id="@+id/throw3"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/throwwwz"
                app:layout_constraintStart_toEndOf="@+id/watch"
                app:layout_constraintTop_toBottomOf="@+id/speak2"
                android:contentDescription="@string/throw3" />

            <ImageView
                android:id="@+id/watch"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/watchz"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/run2"
                android:contentDescription="@string/watch" />

            <TextView
                android:id="@+id/dance2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/dance2"
                app:layout_constraintStart_toEndOf="@+id/ride2"
                app:layout_constraintTop_toBottomOf="@+id/dance" />

            <TextView
                android:id="@+id/ride2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/ride2"
                app:layout_constraintStart_toEndOf="@+id/throw2"
                app:layout_constraintTop_toBottomOf="@+id/ride" />

            <TextView
                android:id="@+id/throw2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/throw2"
                app:layout_constraintStart_toEndOf="@+id/watch2"
                app:layout_constraintTop_toBottomOf="@+id/throw3" />

            <TextView
                android:id="@+id/watch2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/watch2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/watch" />

            <ImageView
                android:id="@+id/swim"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/swimmmz"
                app:layout_constraintStart_toEndOf="@+id/sing"
                app:layout_constraintTop_toBottomOf="@+id/dance2"
                android:contentDescription="@string/swim" />

            <ImageView
                android:id="@+id/sing"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/danceeeezz"
                app:layout_constraintStart_toEndOf="@+id/think"
                app:layout_constraintTop_toBottomOf="@+id/ride2"
                android:contentDescription="@string/sing" />

            <ImageView
                android:id="@+id/think"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/thinkkkz"
                app:layout_constraintStart_toEndOf="@+id/read"
                app:layout_constraintTop_toBottomOf="@+id/throw2"
                android:contentDescription="@string/think" />

            <ImageView
                android:id="@+id/read"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/readddz"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/watch2"
                android:contentDescription="@string/read" />

            <TextView
                android:id="@+id/swim2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/swim2"
                app:layout_constraintStart_toEndOf="@+id/sing2"
                app:layout_constraintTop_toBottomOf="@+id/swim" />

            <TextView
                android:id="@+id/sing2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/sing2"
                app:layout_constraintStart_toEndOf="@+id/think2"
                app:layout_constraintTop_toBottomOf="@+id/sing" />

            <TextView
                android:id="@+id/think2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/think2"
                app:layout_constraintStart_toEndOf="@+id/read2"
                app:layout_constraintTop_toBottomOf="@+id/think" />

            <TextView
                android:id="@+id/read2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/read2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/read" />

            <ImageView
                android:id="@+id/hop"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/hopppz"
                app:layout_constraintStart_toEndOf="@+id/close"
                app:layout_constraintTop_toBottomOf="@+id/swim2"
                android:contentDescription="@string/hop" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/closeeezz"
                app:layout_constraintStart_toEndOf="@+id/sleep"
                app:layout_constraintTop_toBottomOf="@+id/sing2"
                android:contentDescription="@string/close" />

            <ImageView
                android:id="@+id/sleep"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="111dp"
                android:layout_marginLeft="111dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/sleeepz"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/think2"
                android:contentDescription="@string/sleep" />

            <TextView
                android:id="@+id/hop2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/hop2"
                app:layout_constraintStart_toEndOf="@+id/close2"
                app:layout_constraintTop_toBottomOf="@+id/hop" />

            <TextView
                android:id="@+id/close2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/close2"
                app:layout_constraintStart_toEndOf="@+id/sleep2"
                app:layout_constraintTop_toBottomOf="@+id/close" />

            <TextView
                android:id="@+id/sleep2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="111dp"
                android:layout_marginLeft="111dp"
                android:layout_marginTop="10dp"
                android:text="@string/sleep2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sleep" />



            <Button
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="75dp"
                android:layout_marginEnd="43dp"
                android:layout_marginRight="43dp"
                android:background="@android:drawable/ic_menu_revert"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hop2" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>