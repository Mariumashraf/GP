        android:theme="@style/AppTheme" >
        <activity android:name="com.rehabilitationtoolgp.rehabilitationtool.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.rehabilitationtoolgp.rehabilitationtool.FOODS" />
        <activity android:name="com.rehabilitationtoolgp.rehabilitationtool.CLOTHES" />
        <activity android:name="com.rehabilitationtoolgp.rehabilitationtool.PLACES" />
