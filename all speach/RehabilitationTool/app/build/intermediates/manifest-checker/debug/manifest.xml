        <activity android:name="com.rehabilitationtoolgp.rehabilitationtool.TRANSPORTATION" />
        <activity android:name="com.rehabilitationtoolgp.rehabilitationtool.PRACTICING" />
        <activity android:name="com.rehabilitationtoolgp.rehabilitationtool.RAA" />
        <activity android:name="com.rehabilitationtoolgp.rehabilitationtool.SEEN" />
        <activity android:name="com.rehabilitationtoolgp.rehabilitationtool.CardList" />
        <activity android:name="com.rehabilitationtoolgp.rehabilitationtool.UpdateCard" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.rehabilitationtoolgp.rehabilitationtool.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>