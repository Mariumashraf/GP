<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FAMILY">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="194dp"
        tools:ignore="MissingConstraints">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="368dp"
                android:layout_height="203dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorAccent"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlHardcoded">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="158dp"
                    android:background="@color/colorPrimary" />

                <ImageButton
                    android:id="@+id/playall"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="132dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="-250dp"
                    android:layout_marginStart="-200dp"
                    android:layout_marginTop="170dp"
                    android:background="@drawable/round_button"
                    android:src="@android:drawable/ic_media_play"
                    android:contentDescription="@string/playall" />
            </LinearLayout>

            <ImageView
                android:id="@+id/sister"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/sis"
                android:contentDescription="@string/sister"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/brother"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <ImageView
                android:id="@+id/brother"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bro"
                android:contentDescription="@string/brother"
                app:layout_constraintStart_toEndOf="@+id/father"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <ImageView
                android:id="@+id/father"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/dad"
                android:contentDescription="@string/father"
                app:layout_constraintStart_toEndOf="@+id/mother2"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <ImageView
                android:id="@+id/mother"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mom"
                android:contentDescription="@string/mother"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <ImageView
                android:id="@+id/uncle"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/uncle"
                android:contentDescription="@string/grandmother"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/aunt"
                app:layout_constraintTop_toBottomOf="@+id/sister2" />

            <ImageView
                android:id="@+id/aunt"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/auntt"
                android:contentDescription="@string/grandfather"
                app:layout_constraintStart_toEndOf="@+id/uncle3"
                app:layout_constraintTop_toBottomOf="@+id/brother2" />

            <TextView
                android:id="@+id/sister2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="43dp"
                android:layout_marginRight="43dp"
                android:layout_marginTop="10dp"
                android:text="@string/sister2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sister"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/brother2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/brother2"
                app:layout_constraintEnd_toStartOf="@+id/sister2"
                app:layout_constraintStart_toEndOf="@+id/father2"
                app:layout_constraintTop_toBottomOf="@+id/brother" />

            <TextView
                android:id="@+id/father2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/father2"
                app:layout_constraintEnd_toStartOf="@+id/brother2"
                app:layout_constraintStart_toEndOf="@+id/mother2"
                app:layout_constraintTop_toBottomOf="@+id/father" />

            <TextView
                android:id="@+id/mother2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="17dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/mother2"
                app:layout_constraintEnd_toStartOf="@+id/father2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mother" />

            <TextView
                android:id="@+id/uncle2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/uncle2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/aunt2"
                app:layout_constraintTop_toBottomOf="@+id/uncle" />

            <TextView
                android:id="@+id/aunt2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/aunt2"
                app:layout_constraintStart_toEndOf="@+id/uncle4"
                app:layout_constraintTop_toBottomOf="@+id/aunt"
                tools:ignore="DuplicateIds" />

            <Button
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="43dp"
                android:layout_marginTop="110dp"
                android:background="@android:drawable/ic_menu_revert"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cousinboy" />

            <ImageView
                android:id="@+id/uncle3"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@+id/Aunt3"
                app:layout_constraintTop_toBottomOf="@+id/father2"
                app:srcCompat="@drawable/unclee"
                android:contentDescription="@string/uncle3" />

            <ImageView
                android:id="@+id/Aunt3"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mother2"
                app:srcCompat="@drawable/aunt"
                android:contentDescription="@string/Aunt3" />

            <TextView
                android:id="@+id/uncle4"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/uncle4"
                app:layout_constraintStart_toEndOf="@+id/aunt4"
                app:layout_constraintTop_toBottomOf="@+id/uncle3" />

            <TextView
                android:id="@+id/aunt4"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/aunt4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Aunt3" />

            <ImageView
                android:id="@+id/cousinBoy"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/cousinBoy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cousinGirl"
                app:layout_constraintTop_toBottomOf="@+id/uncle2"
                app:srcCompat="@drawable/cousinboy" />

            <ImageView
                android:id="@+id/cousinGirl"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/cousinGirl"
                app:layout_constraintStart_toEndOf="@+id/grandfather"
                app:layout_constraintTop_toBottomOf="@+id/aunt2"
                app:srcCompat="@drawable/cousingirl" />

            <TextView
                android:id="@+id/cousinboy"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="43dp"
                android:layout_marginTop="10dp"
                android:text="@string/cousinboy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cousinBoy" />

            <TextView
                android:id="@+id/cousingirl"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/cousingirl"
                app:layout_constraintEnd_toStartOf="@+id/cousinboy"
                app:layout_constraintTop_toBottomOf="@+id/cousinGirl" />

            <ImageButton
                android:id="@+id/grandfather"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@+id/grandmother"
                app:layout_constraintTop_toBottomOf="@+id/uncle4"
                app:srcCompat="@drawable/grandfather" />

            <ImageButton
                android:id="@+id/grandmother"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/aunt4"
                app:srcCompat="@drawable/gradmother2" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="10dp"
                android:text="جدو"
                app:layout_constraintEnd_toStartOf="@+id/cousingirl"
                app:layout_constraintTop_toBottomOf="@+id/grandfather" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="10dp"
                android:text="جدتى"
                app:layout_constraintEnd_toStartOf="@+id/textView12"
                app:layout_constraintTop_toBottomOf="@+id/grandmother" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>