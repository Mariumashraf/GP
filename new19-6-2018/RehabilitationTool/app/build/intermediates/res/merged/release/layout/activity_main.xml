<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

   >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="368dp"
                android:layout_height="203dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/colorAccent"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlHardcoded">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="168dp"
                    android:background="@color/colorPrimary" />

                <ImageButton
                    android:id="@+id/playall"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="132dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="-200dp"
                    android:layout_marginLeft="-250dp"
                    android:layout_marginTop="170dp"
                    android:background="@drawable/round_button"
                    android:src="@android:drawable/ic_media_play" />
            </LinearLayout>

            <ImageView
                android:id="@+id/want"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/need"
                android:contentDescription="@string/want"
                app:layout_constraintStart_toEndOf="@+id/notWant"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <ImageView
                android:id="@+id/notWant"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/donotwant"
                android:contentDescription="@string/notWant"
                app:layout_constraintStart_toEndOf="@+id/yes"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <ImageView
                android:id="@+id/yes"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/yesz"
                android:contentDescription="@string/yes"
                app:layout_constraintStart_toEndOf="@+id/no"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/no"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/nooozz"
                android:contentDescription="@string/no"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/iwantt"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/iwantt"
                app:layout_constraintStart_toEndOf="@+id/notwanttt"
                app:layout_constraintTop_toBottomOf="@+id/want"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/notwanttt"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/notwanttt"
                app:layout_constraintStart_toEndOf="@+id/yess"
                app:layout_constraintTop_toBottomOf="@+id/notWant"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/yess"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/yess"
                app:layout_constraintStart_toEndOf="@+id/noo"
                app:layout_constraintTop_toBottomOf="@+id/yes"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/noo"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/noo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/no"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/eat"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/eat"
                android:contentDescription="@string/eat"
                app:layout_constraintStart_toEndOf="@+id/drink"
                app:layout_constraintTop_toBottomOf="@+id/iwantt" />

            <ImageView
                android:id="@+id/drink"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/drink"
                android:contentDescription="@string/drink"
                app:layout_constraintStart_toEndOf="@+id/wear"
                app:layout_constraintTop_toBottomOf="@+id/notwanttt" />

            <ImageView
                android:id="@+id/wear"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/wear"
                android:contentDescription="@string/wear"
                app:layout_constraintStart_toEndOf="@+id/go"
                app:layout_constraintTop_toBottomOf="@+id/yess" />

            <ImageView
                android:id="@+id/go"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/walk"
                android:contentDescription="@string/go"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/noo" />

            <TextView
                android:id="@+id/eattt"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/eatt"
                app:layout_constraintStart_toEndOf="@+id/drinkk"
                app:layout_constraintTop_toBottomOf="@+id/eat" />

            <TextView
                android:id="@+id/drinkk"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/drinkk"
                app:layout_constraintStart_toEndOf="@+id/wearr"
                app:layout_constraintTop_toBottomOf="@+id/drink"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/wearr"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/waerr"
                app:layout_constraintStart_toEndOf="@+id/gooo"
                app:layout_constraintTop_toBottomOf="@+id/wear"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/gooo"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/gooo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/go"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/family"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/familyyyz"
                android:contentDescription="@string/family"
                app:layout_constraintStart_toEndOf="@+id/actions"
                app:layout_constraintTop_toBottomOf="@+id/eattt"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/actions"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/verbesz"
                android:contentDescription="@string/actions"
                app:layout_constraintStart_toEndOf="@+id/trans"
                app:layout_constraintTop_toBottomOf="@+id/drinkk"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/trans"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/transportttz"
                android:contentDescription="@string/trans"
                app:layout_constraintStart_toEndOf="@+id/relations"
                app:layout_constraintTop_toBottomOf="@+id/wearr"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/relations"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/directionsssszz"
                android:contentDescription="@string/relations"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gooo"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/familyy"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/familyy"
                app:layout_constraintStart_toEndOf="@+id/actionss"
                app:layout_constraintTop_toBottomOf="@+id/family"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/actionss"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/actionss"
                app:layout_constraintStart_toEndOf="@+id/transportationn"
                app:layout_constraintTop_toBottomOf="@+id/actions"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/transportationn"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/transportationn"
                app:layout_constraintStart_toEndOf="@+id/relationss"
                app:layout_constraintTop_toBottomOf="@+id/trans"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/relationss"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/relationss"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relations"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/createcardd"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@android:drawable/ic_menu_add"
                android:contentDescription="@string/createcardd"
                app:layout_constraintStart_toEndOf="@+id/speechvrifecationbtn"
                app:layout_constraintTop_toBottomOf="@+id/tools" />

            <ImageView
                android:id="@+id/tools2"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/toolsssz"
                android:contentDescription="@string/tools2"
                app:layout_constraintStart_toEndOf="@+id/feelings"
                app:layout_constraintTop_toBottomOf="@+id/actionss" />

            <ImageView
                android:id="@+id/timee"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/timee"
                app:layout_constraintStart_toEndOf="@+id/tools2"
                app:layout_constraintTop_toBottomOf="@+id/familyy" />

            <TextView
                android:id="@+id/tools"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/toolss"
                app:layout_constraintStart_toEndOf="@+id/feeling"
                app:layout_constraintTop_toBottomOf="@+id/tools2" />

            <TextView
                android:id="@+id/time"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tools"
                app:layout_constraintTop_toBottomOf="@+id/timee" />

            <TextView
                android:id="@+id/createe"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/createe"
                app:layout_constraintStart_toEndOf="@+id/practice"
                app:layout_constraintTop_toBottomOf="@+id/createcardd" />

            <Button
                android:id="@+id/speechvrifecationbtn"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/practice"
                android:onClick="buttonClicked"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/feeling" />

            <TextView
                android:id="@+id/practice"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:text="@string/practice"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/speechvrifecationbtn" />

            <ImageView
                android:id="@+id/feelings"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@+id/questions"
                app:layout_constraintTop_toBottomOf="@+id/transportationn"
                app:srcCompat="@drawable/happy"
                android:contentDescription="@string/feelings" />

            <ImageView
                android:id="@+id/questions"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relationss"
                app:srcCompat="@drawable/who"
                android:contentDescription="@string/questions" />

            <TextView
                android:id="@+id/feeling"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/feeling"
                app:layout_constraintStart_toEndOf="@+id/question"
                app:layout_constraintTop_toBottomOf="@+id/feelings" />

            <TextView
                android:id="@+id/question"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/question"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/questions" />

            <ImageView
                android:id="@+id/animals"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/createcardd"
                app:layout_constraintTop_toBottomOf="@+id/time"
                app:srcCompat="@drawable/dog"
                android:contentDescription="@string/animals" />

            <TextView
                android:id="@+id/animals2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/animals2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/createe"
                app:layout_constraintTop_toBottomOf="@+id/animals" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>