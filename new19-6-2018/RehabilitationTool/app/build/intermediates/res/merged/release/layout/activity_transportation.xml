<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TRANSPORTATION">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="368dp"
                android:layout_height="203dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/colorAccent"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlHardcoded">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="158dp"
                    android:background="@color/colorPrimary" />

                <ImageButton
                    android:id="@+id/playall"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="132dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="-200dp"
                    android:layout_marginLeft="-250dp"
                    android:layout_marginTop="170dp"
                    android:background="@drawable/round_button"
                    android:src="@android:drawable/ic_media_play" />
            </LinearLayout>

            <ImageView
                android:id="@+id/Metro"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/metro"
                android:contentDescription="@string/autobus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <ImageView
                android:id="@+id/bus"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bus"
                android:contentDescription="@string/taxi"
                app:layout_constraintStart_toEndOf="@+id/Metro"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <ImageView
                android:id="@+id/Taxi"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/taxi"
                android:contentDescription="@string/car"
                app:layout_constraintStart_toEndOf="@+id/bus"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <ImageView
                android:id="@+id/Car"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/metro"
                android:contentDescription="@string/metro"
                app:layout_constraintStart_toEndOf="@+id/Taxi"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:srcCompat="@drawable/car" />

            <TextView
                android:id="@+id/autobus2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/autobus2"
                app:layout_constraintStart_toEndOf="@+id/metro2"
                app:layout_constraintTop_toBottomOf="@+id/bus" />

            <TextView
                android:id="@+id/taxi2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/taxi2"
                app:layout_constraintStart_toEndOf="@+id/autobus2"
                app:layout_constraintTop_toBottomOf="@+id/Taxi" />

            <TextView
                android:id="@+id/car2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/car2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/taxi2"
                app:layout_constraintTop_toBottomOf="@+id/Car" />

            <TextView
                android:id="@+id/metro2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/metro2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Metro" />

            <ImageView
                android:id="@+id/motor"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/motor"
                android:contentDescription="@string/train"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/metro2" />

            <ImageView
                android:id="@+id/Plane"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/plane"
                android:contentDescription="@string/ship"
                app:layout_constraintStart_toEndOf="@+id/motor"
                app:layout_constraintTop_toBottomOf="@+id/autobus2" />

            <ImageView
                android:id="@+id/Ship"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ship"
                android:contentDescription="@string/plane"
                app:layout_constraintStart_toEndOf="@+id/Plane"
                app:layout_constraintTop_toBottomOf="@+id/taxi2" />

            <ImageView
                android:id="@+id/Train"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/train"
                android:contentDescription="@string/bike"
                app:layout_constraintStart_toEndOf="@+id/Ship"
                app:layout_constraintTop_toBottomOf="@+id/car2" />

            <TextView
                android:id="@+id/train2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/train2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ship2"
                app:layout_constraintTop_toBottomOf="@+id/Train" />

            <TextView
                android:id="@+id/ship2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/ship2"
                app:layout_constraintStart_toEndOf="@+id/plane2"
                app:layout_constraintTop_toBottomOf="@+id/Ship" />

            <TextView
                android:id="@+id/plane2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/plane2"
                app:layout_constraintStart_toEndOf="@+id/motor2"
                app:layout_constraintTop_toBottomOf="@+id/Plane" />

            <TextView
                android:id="@+id/bike2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/bike2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/elevator2"
                app:layout_constraintTop_toBottomOf="@+id/bike" />

            <Button
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="18dp"
                android:background="@android:drawable/ic_menu_revert"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bike2" />

            <ImageView
                android:id="@+id/bike"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@+id/elevator"
                app:layout_constraintTop_toBottomOf="@+id/train2"
                app:srcCompat="@drawable/bike"
                android:contentDescription="@string/bike" />

            <ImageView
                android:id="@+id/elevator"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="207dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ship2"
                app:srcCompat="@drawable/asanser"
                android:contentDescription="@string/elevator" />

            <TextView
                android:id="@+id/motor2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/motor2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/motor" />

            <TextView
                android:id="@+id/elevator2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="216dp"
                android:layout_marginTop="10dp"
                android:text="@string/elevator2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/elevator" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>