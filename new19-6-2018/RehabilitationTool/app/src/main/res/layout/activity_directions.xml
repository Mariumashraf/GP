<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DIRECTIONS">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="368dp"
                android:layout_height="203dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/colorAccent"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlHardcoded">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="158dp"
                    android:background="@color/colorPrimary" />

                <ImageButton
                    android:id="@+id/playall"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="132dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="-200dp"
                    android:layout_marginLeft="-250dp"
                    android:layout_marginTop="170dp"
                    android:background="@drawable/round_button"
                    android:src="@android:drawable/ic_media_play" />
            </LinearLayout>

            <ImageView
                android:id="@+id/above"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/up"
                android:contentDescription="@string/above"
                app:layout_constraintStart_toEndOf="@+id/below"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <ImageView
                android:id="@+id/below"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/down"
                android:contentDescription="@string/below"
                app:layout_constraintStart_toEndOf="@+id/beside"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <ImageView
                android:id="@+id/beside"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ganb"
                android:contentDescription="@string/beside"
                app:layout_constraintStart_toEndOf="@+id/around"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <ImageView
                android:id="@+id/around"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/around"
                android:contentDescription="@string/around"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/above2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/above2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/below2"
                app:layout_constraintTop_toBottomOf="@+id/above" />

            <TextView
                android:id="@+id/below2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/below2"
                app:layout_constraintStart_toEndOf="@+id/beside2"
                app:layout_constraintTop_toBottomOf="@+id/below" />

            <TextView
                android:id="@+id/beside2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/beside2"
                app:layout_constraintStart_toEndOf="@+id/around2"
                app:layout_constraintTop_toBottomOf="@+id/beside" />

            <TextView
                android:id="@+id/around2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/around2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/around" />

            <ImageView
                android:id="@+id/between"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/middle"
                android:contentDescription="@string/between"
                app:layout_constraintStart_toEndOf="@+id/outside"
                app:layout_constraintTop_toBottomOf="@+id/below2" />

            <ImageView
                android:id="@+id/inside"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/inside"
                android:contentDescription="@string/inside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/between"
                app:layout_constraintTop_toBottomOf="@+id/above2" />

            <ImageView
                android:id="@+id/right"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/right"
                android:contentDescription="@string/right"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/around2" />

            <ImageView
                android:id="@+id/left"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginEnd="43dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/left"
                android:contentDescription="@string/left"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inside2" />

            <TextView
                android:id="@+id/between2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/between2"
                app:layout_constraintStart_toEndOf="@+id/outside2"
                app:layout_constraintTop_toBottomOf="@+id/between" />

            <TextView
                android:id="@+id/inside2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/inside2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/between2"
                app:layout_constraintTop_toBottomOf="@+id/inside" />

            <TextView
                android:id="@+id/right2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/right2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/right" />

            <TextView
                android:id="@+id/left2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/left2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/along2"
                app:layout_constraintTop_toBottomOf="@+id/left" />

            <Button
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="34dp"
                android:background="@android:drawable/ic_menu_revert"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/left2"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/outside"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@+id/right"
                app:layout_constraintTop_toBottomOf="@+id/beside2"
                app:srcCompat="@drawable/outside" android:contentDescription="@string/outside" />

            <ImageView
                android:id="@+id/along"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toStartOf="@+id/left"
                app:layout_constraintTop_toBottomOf="@+id/between2"
                app:srcCompat="@drawable/alatol" android:contentDescription="@string/along" />

            <TextView
                android:id="@+id/outside2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/outside2"
                app:layout_constraintStart_toEndOf="@+id/right2"
                app:layout_constraintTop_toBottomOf="@+id/outside" />

            <TextView
                android:id="@+id/along2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="196dp"
                android:layout_marginTop="10dp"
                android:text="@string/along2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/along" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>