<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TIME"
    android:background="@color/colorPrimaryDark">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="368dp"
                android:layout_height="203dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/colorAccent"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlHardcoded">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="158dp"
                    android:background="@color/colorPrimary" />

                <ImageButton
                    android:id="@+id/playall"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="132dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="-200dp"
                    android:layout_marginLeft="-250dp"
                    android:layout_marginTop="170dp"
                    android:background="@drawable/round_button"
                    android:contentDescription="@string/imageView13"
                    android:src="@android:drawable/ic_media_play" />
            </LinearLayout>

            <ImageView
                android:id="@+id/cat"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cat"
                android:contentDescription="@string/morning"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/dog"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <ImageView
                android:id="@+id/dog"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/dog"
                android:contentDescription="@string/night"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toEndOf="@+id/bird"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/cat2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/cat2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/dog2"
                app:layout_constraintTop_toBottomOf="@+id/cat" />

            <TextView
                android:id="@+id/dog2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/dog2"
                app:layout_constraintStart_toEndOf="@+id/bird2"
                app:layout_constraintTop_toBottomOf="@+id/dog"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_marginEnd="43dp"
                android:layout_marginTop="62dp"
                android:background="@android:drawable/ic_menu_revert"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/insect2"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/bird"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/imageView10"
                app:layout_constraintStart_toEndOf="@+id/samka"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:srcCompat="@drawable/bird" />

            <ImageView
                android:id="@+id/samka"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/imageView11"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:srcCompat="@drawable/fish" />

            <TextView
                android:id="@+id/bird2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/bird2"
                app:layout_constraintStart_toEndOf="@+id/samka2"
                app:layout_constraintTop_toBottomOf="@+id/bird" />

            <TextView
                android:id="@+id/samka2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/fish3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/samka" />

            <ImageView
                android:id="@+id/insect"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="281dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/imageView12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cat2"
                app:srcCompat="@drawable/insect" />

            <TextView
                android:id="@+id/insect2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="281dp"
                android:layout_marginTop="10dp"
                android:text="@string/insect2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/insect" />


        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>