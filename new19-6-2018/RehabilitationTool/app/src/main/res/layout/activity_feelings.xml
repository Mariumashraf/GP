<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PLACES">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="69dp"
        tools:ignore="MissingConstraints">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="368dp"
                android:layout_height="203dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorAccent"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlHardcoded">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="158dp"
                    android:background="@color/colorPrimary" />

                <ImageButton
                    android:id="@+id/playall"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="132dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="-250dp"
                    android:layout_marginStart="-200dp"
                    android:layout_marginTop="170dp"
                    android:background="@drawable/round_button"
                    android:src="@android:drawable/ic_media_play" />
            </LinearLayout>

            <ImageView
                android:id="@+id/sad"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/sad"
                android:contentDescription="@string/livingroom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <ImageView
                android:id="@+id/happy"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/smile"
                android:contentDescription="@string/bedroom"
                app:layout_constraintStart_toEndOf="@+id/sad"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <ImageView
                android:id="@+id/hate"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/hate"
                android:contentDescription="@string/kitchen"
                app:layout_constraintStart_toEndOf="@+id/happy"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <ImageView
                android:id="@+id/love"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/love"
                android:contentDescription="@string/bathroom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/hate"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/sad2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/sad2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sad" />

            <TextView
                android:id="@+id/happy2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/happy2"
                app:layout_constraintStart_toEndOf="@+id/sad2"
                app:layout_constraintTop_toBottomOf="@+id/happy" />

            <TextView
                android:id="@+id/hate2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="بكره"
                app:layout_constraintStart_toEndOf="@+id/happy2"
                app:layout_constraintTop_toBottomOf="@+id/hate" />

            <TextView
                android:id="@+id/love2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="بحب"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/hate2"
                app:layout_constraintTop_toBottomOf="@+id/love" />

            <ImageView
                android:id="@+id/mohrag"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mohrag"
                android:contentDescription="@string/school"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sad2" />

            <ImageView
                android:id="@+id/mozeeg"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mozeeg"
                android:contentDescription="@string/university"
                app:layout_constraintStart_toEndOf="@+id/mohrag"
                app:layout_constraintTop_toBottomOf="@+id/happy2" />

            <ImageView
                android:id="@+id/boring"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/boring"
                android:contentDescription="@string/company"
                app:layout_constraintStart_toEndOf="@+id/mozeeg"
                app:layout_constraintTop_toBottomOf="@+id/hate2" />

            <ImageView
                android:id="@+id/methams"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/methams"
                android:contentDescription="@string/supermarket"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/boring"
                app:layout_constraintTop_toBottomOf="@+id/love2" />

            <TextView
                android:id="@+id/mohrg2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/mohrg2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mohrag" />

            <TextView
                android:id="@+id/mozeeg2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/mozeeg2"
                app:layout_constraintStart_toEndOf="@+id/mohrg2"
                app:layout_constraintTop_toBottomOf="@+id/mozeeg" />

            <TextView
                android:id="@+id/boring2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/boring2"
                app:layout_constraintStart_toEndOf="@+id/mozeeg2"
                app:layout_constraintTop_toBottomOf="@+id/boring" />

            <TextView
                android:id="@+id/mothams2"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/mothams2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/boring2"
                app:layout_constraintTop_toBottomOf="@+id/methams" />

            <Button
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="52dp"
                android:background="@android:drawable/ic_menu_revert"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/donotunder2" />

            <ImageView
                android:id="@+id/scared"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/scared"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/hurt"
                app:layout_constraintTop_toBottomOf="@+id/mothams2"
                android:contentDescription="@string/scared" />

            <ImageView
                android:id="@+id/hurt"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@+id/laziiz"
                app:layout_constraintTop_toBottomOf="@+id/boring2"
                app:srcCompat="@drawable/hurt"
                android:contentDescription="@string/hurt" />

            <ImageView
                android:id="@+id/laziiz"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@+id/mooref"
                app:layout_constraintTop_toBottomOf="@+id/mozeeg2"
                app:srcCompat="@drawable/laziiiz"
                android:contentDescription="@string/laziiz" />

            <ImageView
                android:id="@+id/mooref"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mohrg2"
                app:srcCompat="@drawable/mooref"
                android:contentDescription="@string/mooref" />

            <TextView
                android:id="@+id/scared2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/scared2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/hurt2"
                app:layout_constraintTop_toBottomOf="@+id/scared" />

            <TextView
                android:id="@+id/hurt2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/hurt2"
                app:layout_constraintStart_toEndOf="@+id/laziiz2"
                app:layout_constraintTop_toBottomOf="@+id/hurt" />

            <TextView
                android:id="@+id/laziiz2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/laziiz2"
                app:layout_constraintStart_toEndOf="@+id/mooref2"
                app:layout_constraintTop_toBottomOf="@+id/laziiz" />

            <TextView
                android:id="@+id/mooref2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/mooref2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mooref" />

            <ImageView
                android:id="@+id/donotunder"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="281dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scared2"
                app:srcCompat="@drawable/donotunderstand" android:contentDescription="@string/donotunder" />

            <TextView
                android:id="@+id/donotunder2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="281dp"
                android:layout_marginTop="10dp"
                android:text="@string/donotunder2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/donotunder" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>