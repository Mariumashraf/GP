<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TIME"
    android:background="@color/colorPrimaryDark">



        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="368dp"
                android:layout_height="203dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorAccent"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlHardcoded">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="158dp"
                    android:background="@color/colorPrimary" />

                <ImageButton
                    android:id="@+id/playall"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="132dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="-250dp"
                    android:layout_marginStart="-200dp"
                    android:layout_marginTop="170dp"
                    android:background="@drawable/round_button"
                    android:src="@android:drawable/ic_media_play" />

            </LinearLayout>

            <ImageView
                android:id="@+id/morning"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/night"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:srcCompat="@drawable/morning" />

            <ImageView
                android:id="@+id/night"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@+id/sunset"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:srcCompat="@drawable/night" />

            <ImageView
                android:id="@+id/sunset"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@+id/today"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:srcCompat="@drawable/sunset" />

            <ImageView
                android:id="@+id/today"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:srcCompat="@drawable/today" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="الصبح"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/morning" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="الليل"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/night" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="الغروب"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/sunset" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:text="اليوم"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/today" />

            <ImageView
                android:id="@+id/tomorrow"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/yesterday"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:srcCompat="@drawable/tomorrow" />

            <ImageView
                android:id="@+id/yesterday"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="222dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:srcCompat="@drawable/yesterday" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="غدا"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/tomorrow" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="215dp"
                android:layout_marginTop="10dp"
                android:text="أمس"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/yesterday" />

            <Button
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_marginStart="304dp"
                android:layout_marginTop="31dp"
                android:background="@android:drawable/ic_menu_revert"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>
