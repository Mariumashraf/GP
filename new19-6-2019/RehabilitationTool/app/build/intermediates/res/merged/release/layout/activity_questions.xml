<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TIME"
    android:background="@color/colorPrimaryDark">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="368dp"
                android:layout_height="203dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/colorAccent"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlHardcoded">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="158dp"
                    android:background="@color/colorPrimary" />

                <ImageButton
                    android:id="@+id/playall"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="132dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="-200dp"
                    android:layout_marginLeft="-250dp"
                    android:layout_marginTop="170dp"
                    android:background="@drawable/round_button"
                    android:contentDescription="@string/imageView13"
                    android:src="@android:drawable/ic_media_play"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>

            <ImageView
                android:id="@+id/where"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/where"
                android:contentDescription="@string/morning"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/why"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/where2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/where2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/why2"
                app:layout_constraintTop_toBottomOf="@+id/where" />

            <ImageView
                android:id="@+id/why"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/lmazaa"
                android:contentDescription="@string/night"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toEndOf="@+id/who"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/why2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/why2"
                app:layout_constraintStart_toEndOf="@+id/who2"
                app:layout_constraintTop_toBottomOf="@+id/why"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:background="@android:drawable/ic_menu_revert"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="291dp"
                tools:layout_editor_absoluteY="613dp" />

            <ImageView
                android:id="@+id/who"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/imageView10"
                app:layout_constraintStart_toEndOf="@+id/whichone"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:srcCompat="@drawable/who" />

            <ImageView
                android:id="@+id/whichone"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/imageView11"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:srcCompat="@drawable/whichone" />

            <TextView
                android:id="@+id/who2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/who2"
                app:layout_constraintStart_toEndOf="@+id/whichone2"
                app:layout_constraintTop_toBottomOf="@+id/who" />

            <TextView
                android:id="@+id/whichone2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/whichone2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/whichone" />

            <ImageView
                android:id="@+id/when"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/imageView12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/howmoney"
                app:layout_constraintTop_toBottomOf="@+id/where2"
                app:srcCompat="@drawable/date" />

            <ImageView
                android:id="@+id/howmoney"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/imageView13"
                app:layout_constraintStart_toEndOf="@+id/timeee"
                app:layout_constraintTop_toBottomOf="@+id/why2"
                app:srcCompat="@drawable/money"
                tools:ignore="UnknownIdInLayout" />

            <TextView
                android:id="@+id/when2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="43dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/when2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/howmoney2"
                app:layout_constraintTop_toBottomOf="@+id/when" />

            <TextView
                android:id="@+id/howmoney2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/howmoney2"
                app:layout_constraintStart_toEndOf="@+id/time2"
                app:layout_constraintTop_toBottomOf="@+id/howmoney" />

            <ImageView
                android:id="@+id/timeee"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="111dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/timeee"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/who2"
                app:srcCompat="@drawable/time" />

            <TextView
                android:id="@+id/time2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="111dp"
                android:layout_marginTop="10dp"
                android:text="@string/time2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timeee"
                tools:ignore="UnknownIdInLayout" />


        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>