<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FRUIT">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="368dp"
                android:layout_height="203dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/colorAccent"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlHardcoded">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="158dp"
                    android:background="@color/colorPrimary" />

                <ImageButton
                    android:id="@+id/playall"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="132dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="-200dp"
                    android:layout_marginLeft="-250dp"
                    android:layout_marginTop="170dp"
                    android:background="@drawable/round_button"
                    android:src="@android:drawable/ic_media_play" />
            </LinearLayout>

            <ImageView
                android:id="@+id/orange"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/orange"
                android:contentDescription="@string/orange"
                app:layout_constraintStart_toEndOf="@+id/watermelon"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <ImageView
                android:id="@+id/watermelon"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/batek"
                android:contentDescription="@string/watermelon"
                app:layout_constraintStart_toEndOf="@+id/apple"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <ImageView
                android:id="@+id/apple"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/apple"
                android:contentDescription="@string/apple"
                app:layout_constraintStart_toEndOf="@+id/guava"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <ImageView
                android:id="@+id/guava"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/gwafa"
                android:contentDescription="@string/guava"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/orange2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/orange2"
                app:layout_constraintStart_toEndOf="@+id/watermelon2"
                app:layout_constraintTop_toBottomOf="@+id/orange"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/watermelon2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/watermelon2"
                app:layout_constraintStart_toEndOf="@+id/apple2"
                app:layout_constraintTop_toBottomOf="@+id/watermelon"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/apple2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/apple2"
                app:layout_constraintStart_toEndOf="@+id/guava2"
                app:layout_constraintTop_toBottomOf="@+id/apple"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/guava2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/guava2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guava"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/peach"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/kok"
                android:contentDescription="@string/peach"
                app:layout_constraintStart_toEndOf="@+id/grape"
                app:layout_constraintTop_toBottomOf="@+id/orange2" />

            <ImageView
                android:id="@+id/grape"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/enab"
                android:contentDescription="@string/grape"
                app:layout_constraintStart_toEndOf="@+id/Strawberries"
                app:layout_constraintTop_toBottomOf="@+id/watermelon2" />

            <ImageView
                android:id="@+id/Strawberries"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/frawla"
                android:contentDescription="@string/Strawberries"
                app:layout_constraintStart_toEndOf="@+id/pear"
                app:layout_constraintTop_toBottomOf="@+id/apple2" />

            <ImageView
                android:id="@+id/pear"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/komtra"
                android:contentDescription="@string/pear"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guava2" />

            <TextView
                android:id="@+id/peach2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/peach2"
                app:layout_constraintStart_toEndOf="@+id/grape2"
                app:layout_constraintTop_toBottomOf="@+id/peach"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/grape2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/grape2"
                app:layout_constraintStart_toEndOf="@+id/Strawberries2"
                app:layout_constraintTop_toBottomOf="@+id/grape"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/Strawberries2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/Strawberries2"
                app:layout_constraintStart_toEndOf="@+id/pear2"
                app:layout_constraintTop_toBottomOf="@+id/Strawberries"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/pear2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/pear2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pear"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/mango"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mango"
                android:contentDescription="@string/mango"
                app:layout_constraintStart_toEndOf="@+id/banana"
                app:layout_constraintTop_toBottomOf="@+id/peach2" />

            <ImageView
                android:id="@+id/banana"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="196dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mozz"
                android:contentDescription="@string/banana"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/grape2" />

            <TextView
                android:id="@+id/banana2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="196dp"
                android:layout_marginLeft="196dp"
                android:layout_marginTop="10dp"
                android:text="@string/banana2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/banana"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/mango2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/mango2"
                app:layout_constraintStart_toEndOf="@+id/banana2"
                app:layout_constraintTop_toBottomOf="@+id/mango"
                tools:ignore="RtlHardcoded" />

            <Button
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="55dp"
                android:layout_marginEnd="31dp"
                android:layout_marginRight="31dp"
                android:background="@android:drawable/ic_menu_revert"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mango2"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/pome"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toStartOf="@+id/banana"
                app:layout_constraintTop_toBottomOf="@+id/Strawberries2"
                app:srcCompat="@drawable/roman" android:contentDescription="@string/pome" />

            <TextView
                android:id="@+id/pome2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/pome2"
                app:layout_constraintEnd_toStartOf="@+id/banana2"
                app:layout_constraintTop_toBottomOf="@+id/pome" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>