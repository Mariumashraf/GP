<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1faff"
    tools:context=".TIME">
   
         <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

             <LinearLayout
                 android:id="@+id/linearLayout"
                 android:layout_width="368dp"
                 android:layout_height="270dp"
                 android:background="@drawable/shiny"
                 android:layout_marginEnd="0dp"
                 android:layout_marginLeft="0dp"
                 android:orientation="horizontal"
                 app:layout_constraintTop_toTopOf="parent"
                 tools:ignore="RtlHardcoded">


                 <android.support.v7.widget.RecyclerView
                     android:id="@+id/recyclerView"
                     android:layout_width="match_parent"
                     android:layout_height="230dp"
                     android:layout_marginTop="5dp"
                     android:layout_marginLeft="14dp" />

                 <ImageButton
                     android:id="@+id/playall"
                     android:layout_width="132dp"
                     android:layout_height="40dp"
                     android:layout_marginStart="-290dp"
                     android:layout_marginLeft="-250dp"
                     android:layout_marginTop="220dp"
                     android:background="@drawable/play1"
                     android:src="@android:drawable/ic_media_play" />
             </LinearLayout>
            <LinearLayout

                android:layout_width="368dp"
                android:layout_height="185dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="270dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
         <android.support.v7.widget.CardView

                    android:layout_width="100dp"
                    android:layout_height="155dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:padding="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:id="@+id/morning"
                            android:layout_width="70dp"
                            android:layout_height="90dp"
                            android:background="@drawable/morning"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="الصبح"
                            android:textColor="#080202"
                            android:textSize="22dp"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView

                    android:layout_width="100dp"
                    android:layout_height="155dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:padding="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:id="@+id/night"
                            android:layout_width="70dp"
                            android:layout_height="90dp"
                            android:background="@drawable/night" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="الليل"
                            android:textColor="#080202"
                            android:textSize="22dp"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView

                    android:layout_width="100dp"
                    android:layout_height="155dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:padding="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:id="@+id/sunset"
                            android:layout_width="70dp"
                            android:layout_height="90dp"
                            android:background="@drawable/sunset"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="الغروب"
                            android:textColor="#080202"
                            android:textSize="22dp"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout

                android:layout_width="368dp"
                android:layout_height="185dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="450dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.v7.widget.CardView

                    android:layout_width="100dp"
                    android:layout_height="155dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:padding="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:id="@+id/today"
                            android:layout_width="70dp"
                            android:layout_height="90dp"
                            android:background="@drawable/today"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="اليوم"
                            android:textColor="#080202"
                            android:textSize="22dp"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView

                    android:layout_width="100dp"
                    android:layout_height="155dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:padding="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:id="@+id/tomorrow"
                            android:layout_width="70dp"
                            android:layout_height="90dp"
                            android:background="@drawable/tomorrow" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="غدا"
                            android:textColor="#080202"
                            android:textSize="22dp"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView

                    android:layout_width="100dp"
                    android:layout_height="155dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:padding="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:id="@+id/yesterday"
                            android:layout_width="70dp"
                            android:layout_height="90dp"
                            android:background="@drawable/yesterday"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="أمس"
                            android:textColor="#080202"
                            android:textSize="22dp"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

             <Button
                 android:id="@+id/back"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:layout_marginRight="20dp"
                 android:background="@android:drawable/ic_menu_revert"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 tools:ignore="RtlHardcoded" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>
