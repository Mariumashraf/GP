<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VEGETABLES">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorApp">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="@drawable/frame"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlHardcoded">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="14dp" />

            <ImageButton
                android:id="@+id/playall"
                android:layout_width="132dp"
                android:layout_height="40dp"
                android:layout_marginStart="-290dp"
                android:layout_marginLeft="-250dp"
                android:layout_marginTop="220dp"
                android:background="@drawable/orange2"
                android:src="@android:drawable/ic_media_play" />
        </LinearLayout>
              
            <LinearLayout

                android:layout_width="368dp"
                android:layout_height="185dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="270dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.v7.widget.CardView

                    android:layout_width="100dp"
                    android:layout_height="155dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:padding="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:id="@+id/lettuce"
                            android:layout_width="50dp"
                            android:layout_height="90dp"
                            android:background="@drawable/kas"
                            />

                        <TextView
                            android:id="@+id/lettuce2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lettuce2"
                            android:textColor="#080202"
                            android:textSize="@dimen/appSize" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView

                    android:layout_width="100dp"
                    android:layout_height="155dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:padding="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:id="@+id/potato"
                            android:layout_width="70dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btats" />

                        <TextView
                            android:id="@+id/potato2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/potato2"
                            android:textColor="#080202"
                            android:textSize="@dimen/appSize" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView

                    android:layout_width="100dp"
                    android:layout_height="155dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:padding="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:id="@+id/cucumb2"
                            android:layout_width="50dp"
                            android:layout_height="90dp"
                            android:background="@drawable/kyar"
                            />

                        <TextView
                            android:id="@+id/cucumber2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cucumber2"
                            android:textColor="#080202"
                            android:textSize="@dimen/appSize" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout

                android:layout_width="368dp"
                android:layout_height="185dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="450dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.v7.widget.CardView

                    android:layout_width="120dp"
                    android:layout_height="155dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:padding="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:id="@+id/tomato"
                            android:layout_width="80dp"
                            android:layout_height="90dp"
                            android:background="@drawable/tomato"
                            />

                        <TextView
                            android:id="@+id/tomato2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tomato2"
                            android:textColor="#080202"
                            android:textSize="@dimen/appSize" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView

                    android:layout_width="120dp"
                    android:layout_height="155dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:padding="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:id="@+id/carrot"
                            android:layout_width="80dp"
                            android:layout_height="90dp"
                            android:background="@drawable/gazr"
                            />

                        <TextView
                            android:id="@+id/carrot2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/carrot2"
                            android:textColor="#080202"
                            android:textSize="@dimen/appSize" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
<Button
android:id="@+id/back"
android:layout_width="50dp"
android:layout_height="50dp"
android:layout_marginRight="20dp"
android:background="@android:drawable/ic_menu_revert"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
tools:ignore="RtlHardcoded" />

    </android.support.constraint.ConstraintLayout>