<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rehabilitationtool.rehabilitationtoolgp.com.hearingapplication.PreTestInformation">
    <TextView
        android:id="@+id/pretest_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pretest_title"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FF8000"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/pretest_info_body"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="left"
                android:text="pretest_info_body"
                android:textColor="#FFFFFF"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:paddingBottom="20sp"/>

            <Button
                android:id="@+id/pretest_button"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:text="pretest_button"
                android:onClick="gotoCalibration"
                android:paddingLeft="10sp"
                android:paddingRight="30sp"
                android:paddingTop="20sp"
                android:paddingBottom="20sp"
                android:layout_gravity="right"
                android:gravity="left"
                />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
