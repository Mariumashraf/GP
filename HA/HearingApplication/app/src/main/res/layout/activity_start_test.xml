<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="rehabilitationtool.rehabilitationtoolgp.com.hearingapplication.StartTest">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginEnd="92dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="60dp"
        android:background="@color/cardview_light_background"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/startt"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:background="@drawable/ear"
            tools:layout_editor_absoluteX="116dp"
            tools:layout_editor_absoluteY="60dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginEnd="92dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="25dp"
        android:background="@color/cardview_light_background"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <Button
            android:id="@+id/results"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/flo"
            tools:layout_editor_absoluteX="128dp"
            tools:layout_editor_absoluteY="300dp" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="250dp"
        android:layout_height="68dp"
        android:layout_marginEnd="92dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="20dp"
        android:text="ابدأ الأختبار"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="250dp"
        android:layout_height="68dp"
        android:layout_marginEnd="92dp"
        android:layout_marginStart="92dp"


        android:layout_marginTop="20dp"
        android:text="نتائج الأختبار"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4" />


</android.support.constraint.ConstraintLayout>

