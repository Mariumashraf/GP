<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorApp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView

            android:id="@+id/image"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="0dp"
            android:text="ضع صورة للبطاقة"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:id="@+id/record"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginStart="-120dp"
            android:layout_marginTop="245dp"
            android:text="ضع تسجيلا للبطاقة"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:id="@+id/nam"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="-110dp"
            android:layout_marginTop="390dp"
            android:text="ضع اسما للبطاقة"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editNam"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="-200dp"
            android:layout_marginTop="420dp"
            android:autofillHints=""
            android:inputType=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="o" />



    </LinearLayout>

    <LinearLayout

        android:layout_width="368dp"
        android:layout_height="125dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView

            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:padding="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/choose"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:background="@drawable/ga"
                    android:onClick="buttonClicked" />



            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView

            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:padding="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/take"
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:background="@drawable/ca"
                    android:onClick="buttonClicked" />


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
            <LinearLayout

                android:layout_width="368dp"
                android:layout_height="135dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="130dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <android.support.v7.widget.CardView

                    android:layout_width="200dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:padding="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/ViewImage"
                            android:layout_width="140dp"
                            android:layout_height="100dp"
                            />


                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

    <LinearLayout

        android:layout_width="368dp"
        android:layout_height="125dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="270dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <android.support.v7.widget.CardView

            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="130dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:padding="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/btnrecord"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/ma" />
                <Button
                    android:id="@+id/btnstop"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/maa" />


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


    <LinearLayout

        android:layout_width="368dp"
        android:layout_height="125dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="470dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView

            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:padding="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <Button
                    android:id="@+id/updata"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:onClick="buttonClicked"
                    android:text="@string/save"
                    android:textColor="@color/colorPrimary"
                    android:background="#fff"
                    />



            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView

            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:padding="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <Button
                    android:id="@+id/display"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:onClick="buttonClicked"
                    android:text="@string/display"
                    android:textColor="@color/colorPrimary"
                    android:background="#fff"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
    <Button
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:background="@android:drawable/ic_menu_revert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="RtlHardcoded" />


</android.support.constraint.ConstraintLayout>
