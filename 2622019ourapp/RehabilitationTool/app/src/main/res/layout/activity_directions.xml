<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DIRECTIONS">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="300dp"
                    android:layout_height="150dp" />

                <Button
                    android:id="@+id/playall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:drawable/ic_media_play" />
            </LinearLayout>

            <ImageView
                android:id="@+id/above"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/aboveeeee"
                app:layout_constraintStart_toEndOf="@+id/below"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:contentDescription="@string/above" />

            <ImageView
                android:id="@+id/below"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/underrrz"
                app:layout_constraintStart_toEndOf="@+id/beside"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:contentDescription="@string/below" />

            <ImageView
                android:id="@+id/beside"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/beeesideee"
                app:layout_constraintStart_toEndOf="@+id/around"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:contentDescription="@string/beside" />

            <ImageView
                android:id="@+id/around"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/arounddddd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:contentDescription="@string/around" />

            <TextView
                android:id="@+id/above2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/above2"
                app:layout_constraintStart_toEndOf="@+id/below2"
                app:layout_constraintTop_toBottomOf="@+id/above" />

            <TextView
                android:id="@+id/below2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/below2"
                app:layout_constraintStart_toEndOf="@+id/beside2"
                app:layout_constraintTop_toBottomOf="@+id/below" />

            <TextView
                android:id="@+id/beside2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/beside2"
                app:layout_constraintStart_toEndOf="@+id/around2"
                app:layout_constraintTop_toBottomOf="@+id/beside" />

            <TextView
                android:id="@+id/around2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/around2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/around" />

            <ImageView
                android:id="@+id/between"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/betttweennn"
                app:layout_constraintStart_toEndOf="@+id/inside"
                app:layout_constraintTop_toBottomOf="@+id/above2"
                android:contentDescription="@string/between" />

            <ImageView
                android:id="@+id/inside"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/insideeez"
                app:layout_constraintStart_toEndOf="@+id/right"
                app:layout_constraintTop_toBottomOf="@+id/below2"
                android:contentDescription="@string/inside" />

            <ImageView
                android:id="@+id/right"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rightttz"
                app:layout_constraintStart_toEndOf="@+id/left"
                app:layout_constraintTop_toBottomOf="@+id/beside2"
                android:contentDescription="@string/right" />

            <ImageView
                android:id="@+id/left"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/leftttz"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/around2"
                android:contentDescription="@string/left" />

            <TextView
                android:id="@+id/between2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/between2"
                app:layout_constraintStart_toEndOf="@+id/inside2"
                app:layout_constraintTop_toBottomOf="@+id/between" />

            <TextView
                android:id="@+id/inside2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/inside2"
                app:layout_constraintStart_toEndOf="@+id/right2"
                app:layout_constraintTop_toBottomOf="@+id/inside" />

            <TextView
                android:id="@+id/right2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/right2"
                app:layout_constraintStart_toEndOf="@+id/left2"
                app:layout_constraintTop_toBottomOf="@+id/right" />

            <TextView
                android:id="@+id/left2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/left2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/left" />

            <Button
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="69dp"
                android:layout_marginEnd="29dp"
                android:layout_marginRight="29dp"
                android:background="@android:drawable/ic_menu_revert"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/between2" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>