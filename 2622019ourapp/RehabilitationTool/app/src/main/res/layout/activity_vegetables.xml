<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VEGETABLES">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="368dp"
                android:layout_height="203dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/colorAccent"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="158dp"
                    android:background="@color/colorPrimary" />

                <ImageButton
                    android:id="@+id/playall"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="132dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="-200dp"
                    android:layout_marginLeft="-250dp"
                    android:layout_marginTop="170dp"
                    android:background="@drawable/round_button"
                    android:contentDescription="TODO"
                    android:src="@android:drawable/ic_media_play" />
            </LinearLayout>

            <ImageView
                android:id="@+id/tomato"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/tomatoz"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:contentDescription="@string/tomato" />

            <ImageView
                android:id="@+id/potato"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/potatoz"
                app:layout_constraintStart_toEndOf="@+id/tomato"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:contentDescription="@string/potato" />

            <ImageView
                android:id="@+id/cucumb2"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cucumberzz"
                app:layout_constraintStart_toEndOf="@+id/potato"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:contentDescription="@string/cucumb2" />

            <ImageView
                android:id="@+id/carrot"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/caaarrot"
                app:layout_constraintStart_toEndOf="@+id/cucumb2"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:contentDescription="@string/carrot" />

            <TextView
                android:id="@+id/tomato2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/tomato2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tomato" />

            <TextView
                android:id="@+id/potato2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/potato2"
                app:layout_constraintStart_toEndOf="@+id/tomato2"
                app:layout_constraintTop_toBottomOf="@+id/potato" />

            <TextView
                android:id="@+id/cucumber2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/cucumber2"
                app:layout_constraintStart_toEndOf="@+id/potato2"
                app:layout_constraintTop_toBottomOf="@+id/cucumb2" />

            <TextView
                android:id="@+id/carrot2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/carrot2"
                app:layout_constraintStart_toEndOf="@+id/cucumber2"
                app:layout_constraintTop_toBottomOf="@+id/carrot" />

            <ImageView
                android:id="@+id/lettuce"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="281dp"
                android:layout_marginLeft="281dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/lettucez"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/carrot2"
                android:contentDescription="@string/lettuce" />

            <TextView
                android:id="@+id/lettuce2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="281dp"
                android:layout_marginLeft="281dp"
                android:layout_marginTop="10dp"
                android:text="@string/lettuce2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lettuce" />

            <Button
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="318dp"
                android:layout_marginLeft="318dp"
                android:layout_marginTop="200dp"
                android:background="@android:drawable/ic_menu_revert"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/carrot2" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>