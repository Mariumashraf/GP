<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PLACES">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="368dp"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="300dp"
                    android:layout_height="150dp" />

                <Button
                    android:id="@+id/playall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:drawable/ic_media_play" />
            </LinearLayout>

            <ImageView
                android:id="@+id/livingroom"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/livingroommmz"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:contentDescription="@string/livingroom" />

            <ImageView
                android:id="@+id/bedroom"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bedrrroommm"
                app:layout_constraintStart_toEndOf="@+id/livingroom"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:contentDescription="@string/bedroom" />

            <ImageView
                android:id="@+id/kitchen"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/kitchennz"
                app:layout_constraintStart_toEndOf="@+id/bedroom"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:contentDescription="@string/kitchen" />

            <ImageView
                android:id="@+id/bathroom"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bathroomz"
                app:layout_constraintStart_toEndOf="@+id/kitchen"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:contentDescription="@string/bathroom" />

            <TextView
                android:id="@+id/livingroom2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/livingroom2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/livingroom" />

            <TextView
                android:id="@+id/bedroom2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/bedroom2"
                app:layout_constraintStart_toEndOf="@+id/livingroom2"
                app:layout_constraintTop_toBottomOf="@+id/bedroom" />

            <TextView
                android:id="@+id/kitchen2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/kitchen2"
                app:layout_constraintStart_toEndOf="@+id/bedroom2"
                app:layout_constraintTop_toBottomOf="@+id/kitchen" />

            <TextView
                android:id="@+id/bathroom2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/bathroom2"
                app:layout_constraintStart_toEndOf="@+id/kitchen2"
                app:layout_constraintTop_toBottomOf="@+id/bathroom" />

            <ImageView
                android:id="@+id/school"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/schoollz"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/livingroom2"
                android:contentDescription="@string/school" />

            <ImageView
                android:id="@+id/university"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/universityyz"
                app:layout_constraintStart_toEndOf="@+id/school"
                app:layout_constraintTop_toBottomOf="@+id/bedroom2"
                android:contentDescription="@string/university" />

            <ImageView
                android:id="@+id/company"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/companyzz"
                app:layout_constraintStart_toEndOf="@+id/university"
                app:layout_constraintTop_toBottomOf="@+id/kitchen2"
                android:contentDescription="@string/company" />

            <ImageView
                android:id="@+id/supermarket"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/supermarkeetz"
                app:layout_constraintStart_toEndOf="@+id/company"
                app:layout_constraintTop_toBottomOf="@+id/bathroom2"
                android:contentDescription="@string/supermarket" />

            <TextView
                android:id="@+id/school2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:text="@string/school2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/school" />

            <TextView
                android:id="@+id/university2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/university2"
                app:layout_constraintStart_toEndOf="@+id/school2"
                app:layout_constraintTop_toBottomOf="@+id/university" />

            <TextView
                android:id="@+id/company2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/company2"
                app:layout_constraintStart_toEndOf="@+id/university2"
                app:layout_constraintTop_toBottomOf="@+id/company" />

            <TextView
                android:id="@+id/supermarket2"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/supermarket2"
                app:layout_constraintStart_toEndOf="@+id/company2"
                app:layout_constraintTop_toBottomOf="@+id/supermarket" />

            <Button
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="318dp"
                android:layout_marginLeft="318dp"
                android:layout_marginTop="82dp"
                android:background="@android:drawable/ic_menu_revert"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/supermarket2" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>