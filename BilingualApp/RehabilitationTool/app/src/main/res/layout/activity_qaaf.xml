<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
           
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="1dp"
            android:text="    ق   "
            android:textColor="#3e5ae9"
            android:textSize="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
    <LinearLayout

        android:layout_width="368dp"
        android:layout_height="185dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="90dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView

            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_marginLeft="90dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:padding="20dp"
            android:background="#8597"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">



                <ImageView
                    android:id="@+id/qamarbtn"
                    android:layout_width="50dp"
                    android:layout_height="75dp"
                    android:background="@drawable/qamar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="قمر"
                    android:textColor="#060606"
                    android:textSize="23dp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout

        android:layout_width="368dp"
        android:layout_height="185dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="265dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView

            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_marginLeft="90dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:padding="20dp"
            android:background="#8597"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">



                <ImageView
                    android:id="@+id/saqrbtn"
                    android:layout_width="50dp"
                    android:layout_height="75dp"
                    android:background="@drawable/saqr" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="صقر"
                    android:textColor="#060606"
                    android:textSize="23dp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout

        android:layout_width="368dp"
        android:layout_height="185dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="432dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView

            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_marginLeft="90dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:padding="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">



                <ImageView
                    android:id="@+id/waraqbtn"
                    android:layout_width="60dp"
                    android:layout_height="75dp"
                    android:background="@drawable/notebook" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ورق"
                    android:textColor="#060606"
                    android:textSize="23dp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

   
</android.support.constraint.ConstraintLayout>